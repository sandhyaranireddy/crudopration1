<h1>Edit User</h1>

    <% if @user.errors.any? %>
      <h2>The following errors prevented the user from being saved</h2> 
      <ul> 
        <% @user.errors.full_messages.each do |msg| %> 
          <li><%= msg %></li> 
        <% end %> 
      </ul>
    <% end %>
<%= form_with(model: @user, local: true) do |f| %>

<p>
	<%= f.label :username %><br/>
	<%= f.text_field :username %>
</p>
<p>
	<%= f.label :gender %><br/>
	<%= f.text_field :gender %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>